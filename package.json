{
  "name": "looky",
  "version": "0.2.0",
  "description": "Responsively use values from your theme in your css-in-js",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "typings": "dist/cjs/index.d.ts",
  "homepage": "https://github.com/ceramic-ui/ceramic-ui",
  "bugs": {
    "url": "https://github.com/ceramic-ui/ceramic-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ceramic-ui/ceramic-ui.git"
  },
  "author": "George Haidar <ghaidar0@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "build:es": "tsc -p ./tsconfig.es.json",
    "build": "npm run build:cjs && npm run build:es",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "dlv": "^1.1.1"
  },
  "devDependencies": {
    "@types/jest": "^22.2.0",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "@types/react-test-renderer": "^16.0.1",
    "emotion": "^9.0.2",
    "jest": "^22.4.2",
    "jest-emotion": "^9.0.0",
    "jest-styled-components": "^5.0.0",
    "prettier": "^1.11.1",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-emotion": "^9.0.2",
    "react-test-renderer": "^16.2.0",
    "styled-components": "^3.2.0",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.9.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.7.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./jest/framework.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
